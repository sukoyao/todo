<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">Register</h1>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="{{{name}}}" />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" placeholder="Enter Email" class="form-control"
            value="{{{email}}}" />
        </div>
        <div class=" form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" placeholder="Create Password" class="form-control"
            value="{{{password}}}" />
        </div>
        <div class=" form-group">
          <label for="password2">Confirm Password</label>
          <input type="password" id="password2" name="password2" placeholder="Confirm Password" class="form-control"
            value="{{{password2}}}" />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Register</button>
      </form>
      <p class="lead mt-4">
        Have an Account? <a href="/users/login">Login</a>
      </p>
    </div>
  </div>
</div>